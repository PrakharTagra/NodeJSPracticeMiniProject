<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Access</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<nav class="fixed right-6 top-1/2 -translate-y-1/2 z-50">
  <div class="bg-black/90 border border-white/10 rounded-2xl shadow-xl
              flex flex-col gap-3 p-4">
    <%if(user){%>
      <a href="/user/<%= user.userid %>"
      class="px-4 py-2 text-sm font-bold text-white bg-yellow-600
             rounded-xl hover:bg-yellow-700 transition text-center">
      Home
    </a>
      <a href="/profile/<%= user.userid %>"
      class="px-4 py-2 text-sm font-bold text-white bg-green-600
             rounded-xl hover:bg-green-700 transition text-center">
      Profile
    </a>
    <a href="/posts/<%=user.userid%>"
      class="px-4 py-2 text-sm font-bold text-white bg-gray-700
             rounded-xl hover:bg-gray-600 transition text-center">
      My Posts
    </a>

    <a href="/post/create/<%=user.userid%>"
      class="px-4 py-2 text-sm font-bold text-white bg-purple-600
             rounded-xl hover:bg-purple-700 transition text-center">
      Create Post
    </a>
    <%}else{%><a href="/"
      class="px-4 py-2 text-sm font-bold text-white bg-indigo-600
             rounded-xl hover:bg-indigo-700 transition text-center">
      Login/Register
    </a><%}%>
    <a href="/admin"
      class="px-4 py-2 text-sm font-bold text-white bg-red-600
             rounded-xl hover:bg-red-700 transition text-center">
      Admin
    </a>
  </div>
</nav>
<main class="relative w-screen h-screen flex items-center justify-center
bg-[url('/images/grunge-concrete-background-with-yellow-black-striped-design.jpg')] bg-contain">
  <!-- Dark Overlay -->
  <div class="absolute inset-0 bg-black/40"></div>

  <!-- Admin Card -->
  <section class="relative z-10 w-[95%] max-w-md 
  bg-black/90 border border-red-500/40 rounded-3xl p-8 shadow-2xl">

    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-extrabold text-red-500 tracking-wide">
        Admin Access
      </h1>
      <p class="text-gray-400 mt-2 text-sm">
        Restricted Area • Authorized Personnel Only
      </p>
    </div>

    <!-- Form -->
    <form action="/admin/login" method="POST" class="space-y-6">

      <!-- Email -->
      <div>
        <label class="text-gray-400 text-sm">Admin Email</label>
        <input
          type="email"
          name="email"
          required
          placeholder="admin@domain.com"
          class="w-full mt-2 p-3 rounded-xl bg-transparent 
          border border-gray-600 text-white outline-none
          focus:border-red-500 transition"
        />
      </div>

      <!-- Password -->
      <div>
        <label class="text-gray-400 text-sm">Password</label>
        <input
          type="password"
          name="password"
          required
          placeholder="••••••••"
          class="w-full mt-2 p-3 rounded-xl bg-transparent 
          border border-gray-600 text-white outline-none
          focus:border-red-500 transition"
        />
      </div>

      <!-- Admin Code -->
      <div>
        <label class="text-gray-400 text-sm">Special Admin Code</label>
        <input
          type="password"
          name="adminCode"
          required
          placeholder="ADMIN-XXXX"
          class="w-full mt-2 p-3 rounded-xl bg-transparent 
          border border-red-500 text-white outline-none
          focus:ring-2 focus:ring-red-600 transition"
        />
      </div>

      <!-- Button -->
      <button
        type="submit"
        class="w-full bg-red-600 text-white font-bold py-3 rounded-xl
        hover:bg-red-700 transition tracking-wide"
      >
        Verify & Login
      </button>

    </form>

    <!-- Footer -->
    <p class="text-xs text-gray-500 text-center mt-6">
      Unauthorized access is strictly prohibited.
    </p>

  </section>

</main>

</body>
</html>