<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Profile</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<nav class="fixed right-6 top-1/2 -translate-y-1/2 z-50">
  <div class="bg-black/90 border border-white/10 rounded-2xl shadow-xl
              flex flex-col gap-3 p-4">
    <%if(user){%>
      <a href="/user/<%= id %>"
      class="px-4 py-2 text-sm font-bold text-white bg-yellow-600
             rounded-xl hover:bg-yellow-700 transition text-center">
      Home
    </a>
      <a href="/profile/<%=id%>"
      class="px-4 py-2 text-sm font-bold text-white bg-green-600
             rounded-xl hover:bg-green-700 transition text-center">
      Profile
    </a>
    <a href="/posts/<%=id%>"
      class="px-4 py-2 text-sm font-bold text-white bg-gray-700
             rounded-xl hover:bg-gray-600 transition text-center">
      My Posts
    </a>

    <a href="/post/create/<%=id%>"
      class="px-4 py-2 text-sm font-bold text-white bg-purple-600
             rounded-xl hover:bg-purple-700 transition text-center">
      Create Post
    </a>
    <%}else{%><a href="/"
      class="px-4 py-2 text-sm font-bold text-white bg-indigo-600
             rounded-xl hover:bg-indigo-700 transition text-center">
      Login/Register
    </a><%}%>
    <a href="/admin"
      class="px-4 py-2 text-sm font-bold text-white bg-red-600
             rounded-xl hover:bg-red-700 transition text-center">
      Admin
    </a>
  </div>
</nav>
<main class="relative w-screen h-screen flex items-center justify-center
bg-[url('/images/138125038_10287522.jpg')] bg-contain">

  <!-- Dark Overlay -->
  <div class="absolute inset-0 bg-black/65"></div>

  <!-- Profile Wrapper -->
  <section class="relative z-10 w-[95%] max-w-4xl border border-white/20 rounded-3xl p-8 shadow-2xl bg-[url('/images/pexels-harun-tan-2311991-3980364.jpg')] bg-cover">

    <!-- Header -->
    <div class="flex flex-col sm:flex-row items-center justify-between gap-6">

      <!-- Initials Avatar -->
      <div class="flex flex-col sm:flex-row items-center gap-6">
        <div class="w-28 h-28 rounded-full object-cover overflow-hidden">
          <img src="/images/uploads/<%=profilepic%>" alt="" class="h-full w-full">
        </div>
        <!-- Name -->
        <div class="text-center sm:text-left">
          <h1 class="text-3xl font-extrabold text-white tracking-wide">
            <%=name%>
          </h1>
          <p class="text-gray-300 mt-1">
            Registered User
          </p>
        </div>
      </div>
      <div class="border-2 border-white p-2 rounded-md">
        <h1 class="text-white font-bold text-2xl">Set Profile Picture</h1>
        <form method="post" action="/profilepic/<%=id%>" enctype="multipart/form-data" class="flex flex-col">
          <input type="file" name="image" class="text-white">
          <input type="submit" value="Set Profile" class="bg-blue-500 w-1/3 mt-2 rounded-md font-bold text-white">
        </form>
      </div>

    </div>

    <!-- Divider -->
    <div class="h-px bg-white/20 my-8"></div>

    <!-- Profile Info -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">

      <div class="p-5 bg-black/100 rounded-xl">
        <p class="text-gray-400 text-sm">Full Name</p>
        <p class="text-white text-lg font-semibold"><%=name%></p>
      </div>

      <div class="p-5 bg-black/100 rounded-xl">
        <p class="text-gray-400 text-sm">Email</p>
        <p class="text-white text-lg font-semibold"><%=email%></p>
      </div>

      <div class="p-5 bg-black/100 rounded-xl">
        <p class="text-gray-400 text-sm">Mobile Number</p>
        <p class="text-white text-lg font-semibold"><%=mobile%></p>
      </div>

      <div class="p-5 bg-black/100 rounded-xl">
        <p class="text-gray-400 text-sm">Gender</p>
        <p class="text-white text-lg font-semibold"><%=gender%></p>
      </div>

      <div class="p-5 bg-black/100 rounded-xl sm:col-span-2">
        <p class="text-gray-400 text-sm">Age</p>
        <p class="text-white text-lg font-semibold"><%=age%></p>
      </div>

    </div>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-4 mt-10">
      <a class="flex-1 bg-white text-black text-center text-md font-bold py-3 rounded-xl hover:bg-gray-200 transition" href='/editprofile/<%=id%>'>
        Edit Profile
      </a>
      <a class="flex-1 bg-red-600 text-white font-bold py-3 rounded-xl hover:bg-red-700 transition flex justify-center text-md" href="/logout">
        Logout
      </a>
    </div>

  </section>

</main>

<script>
  const name = "Prakhar Tagra";
  const initials = name
  .split(" ")
  .map(word => word[0])
  .join("")
  .toUpperCase();
</script>

</body>
</html>
